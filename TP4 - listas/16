accion procesos_pila(prim:puntero a Nodo) es
	ambiente
		Nodo=registro
			clave:entero;
			prox:puntero a Nodo;
		fin;
		nodo:puntero a Nodo;
		opcion:1..3;
		funcion pop():Nodo es
			ambiente
				
			algoritmo
				si (prim==nil)
					entonces
						esc("Pila vac√≠a");
					contrario
						pop:=nodo;
						prim:=*nodo.prox;
						disponer(nodo);
				fin;
		fin;
		procedimiento push es
			ambiente
				
			algoritmo
				nuevo(nodo);
				*nodo.prox:=prim;
				esc("Ingresar dato");
				leer(*nodo.clave);
				prim:=nodo;
		fin;
	algoritmo
		repetir
			nodo:=prim;
			esc("Seleccione una opcion");
			esc("1: Ingresar elemento");
			esc("2: Eliminar elemento");
			esc("3: Salir");
			leer(opcion);
			segun opcion hacer
				1:
					push;
				2:
					pop(nodo);
			fin;
		hasta (opcion==3);
fin.